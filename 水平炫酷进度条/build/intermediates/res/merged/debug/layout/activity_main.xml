<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lanying="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lanying.coolhorizontalprogressbarwithprogress.customview.CoolHorizontalProgressBarWithProgress
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        lanying:progress_text_size="15sp"
        lanying:progress_reach_color="#f00"
        lanying:progress_reach_height="3dp"
        android:padding="10dp"
        android:progress="20"
        android:indeterminate="false"/>
    <com.lanying.coolhorizontalprogressbarwithprogress.customview.CoolHorizontalProgressBarWithProgress
        android:layout_width="match_parent"
        android:layout_height="50dp"
        lanying:progress_text_size="15sp"
        lanying:progress_text_color="#0f0"
        lanying:progress_reach_color="#0f0"
        lanying:progress_unreach_color="#40f0"
        lanying:progress_reach_height="3dp"
        android:padding="10dp"
        android:progress="50"
        android:indeterminate="false"/>

    <com.lanying.coolhorizontalprogressbarwithprogress.customview.CoolHorizontalProgressBarWithProgress
        android:layout_width="match_parent"
        android:layout_height="50dp"
        lanying:progress_text_size="15sp"
        lanying:progress_reach_color="#00f"
        lanying:progress_text_color="#00f"
        lanying:progress_unreach_color="#400f"
        lanying:progress_reach_height="10dp"
        android:padding="10dp"
        android:progress="80"
        android:indeterminate="false"/>

    <com.lanying.coolhorizontalprogressbarwithprogress.customview.CoolRoundProgressBarWithProgress
        android:id="@+id/round_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        lanying:progress_reach_color="#f00"
        lanying:progress_unreach_color="#4f00"
        lanying:progress_text_color="#f00"
        lanying:progress_text_size="20sp"
        lanying:radius="60dp"
        android:progress="80"
        lanying:progress_reach_height="5dp"
        />
</LinearLayout>
